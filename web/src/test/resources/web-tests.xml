<!DOCTYPE project [
    <!ENTITY config SYSTEM "file:./config.xml">
    <!ENTITY login SYSTEM "file:./login.xml">
]>
<project basedir="." default="run-all-tests"> 
    <!-- Use i18n bundle, 2nd one listed is the default -->
    <property file="\${basedir}/target/${webapp.name}/WEB-INF/classes/ApplicationResources_${user.language}.properties"/>
    <property file="\${basedir}/target/${webapp.name}/WEB-INF/classes/ApplicationResources.properties"/>

    <!-- runs all targets -->
    <target name="run-all-tests" 
        depends="Login,Logout,PasswordHint,Signup,StaticPages,UserTests,FlushCache,FileUpload,OrderElementTests,OrderTests,ProductTests"
        description="Call and executes all test cases (targets)"/>
    
    <!-- runs user-related tests -->
    <target name="UserTests" depends="EditUser,SearchUser,SaveUser,AddUser,ActiveUsers"
        description="Call and executes all user test cases (targets)">
        <echo>Successfully ran all User UI tests!</echo>
    </target>
    
    <!-- Login to the application -->
    <target name="Login" description="Runs login test and verifies Main Menu's Title">
        <webtest name="login">
            &config;
            <steps>
                &login;
            </steps>
        </webtest>
    </target>

    <!-- Logout of the application -->
    <target name="Logout" description="Runs logout test and verifies Login's Title">
        <webtest name="login">
            &config;
            <steps>
                &login;
                <invoke description="get Logout Page" url="/logout.jsp"/>
                <verifytitle description="we should see the login title" text=".*${login.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Retrieve Password Hint -->
    <target name="PasswordHint" description="Gets the user's password hint">
        <webtest name="passwordHint">
            &config;
            <steps>
                <invoke description="get Login Page" url="/"/>
                <verifytitle description="we should see the login title" text=".*${login.title}.*" regex="true"/>
                <invoke description="click password hint link" url="/passwordHint.html?username=admin"/>
                <verifytitle description="show login title again" text=".*${login.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>
    
    <target name="StaticPages" description="Ensures that StaticFilter is working">
        <webtest name="staticPages">
            &config;
            <steps>
                &login;
                <invoke description="go to static HTML page" url="/scripts/dojo/test.html"/>
                <verifytitle description="we should see static title" text="Static HTML Page" regex="true"/>
                <verifytext description="verify message" text="Static content!"/>
            </steps>
        </webtest>
    </target>

    <!-- Verify the edit user screen displays without errors -->
    <target name="EditUser" description="Tests selecting the 'Edit Profile' forward">
        <webtest name="editUser">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Profile link" url="/editProfile.html"/>
                <verifytitle description="we should see the user profile title"
                    text=".*${userProfile.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>
    
    <!-- Verify the user list screen displays without errors -->
    <target name="SearchUser" description="Tests search for and displaying all users">
        <webtest name="searchUser">
            &config;
            <steps>
                &login;
                <invoke description="click View Users link" url="/admin/users.html"/>
                <verifytitle description="we should see the user list title" 
                    text=".*${userList.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>
    
    <!-- Edit a user and then save -->
    <target name="SaveUser" description="Tests editing and saving a user">
        <webtest name="saveUser">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Profile link" url="/editProfile.html"/>
                <verifytitle description="we should see the user profile title" 
                    text=".*${userProfile.title}.*" regex="true"/>
                <setinputfield description="set address" name="user.address.address" value="2255 Lane Avenue"/>
                <setinputfield description="set zipcode" name="user.address.postalCode" value="59826"/>
                <clickbutton label="${button.save}" description="Click Save"/>
                <verifytitle description="display Main Menu if save OK" text=".*${mainMenu.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>
    
    <!-- Add a new user after logging in -->
    <target name="AddUser" description="Adds a new user profile">
        <webtest name="addUser">
            &config;
            <steps>
                &login;
                <invoke description="click Add Button" url="/editUser.html?from=list"/>
                <verifytitle description="we should see the user profile title"
                    text=".*${userProfile.title}.*" regex="true"/>
                    
                <setinputfield description="set username" name="user.username" value="newuser"/>
                <setinputfield description="set password" name="user.password" value="test"/>
                <setinputfield description="set confirmPassword" name="user.confirmPassword" value="test"/>
                <setinputfield description="set firstName" name="user.firstName" value="Test"/>
                <setinputfield description="set lastName" name="user.lastName" value="Name"/>
                <setinputfield description="set city" name="user.address.city" value="Denver"/>
                <setinputfield description="select province" name="user.address.province" value="CO"/>
                <setselectfield description="select country" name="user.address.country" value="US"/>
                <setinputfield description="set postalCode" name="user.address.postalCode" value="80210"/>
                <setinputfield description="set email" name="user.email" value="newuser@raibledesigns.com"/>
                <setinputfield description="set website" name="user.website" value="http://raibledesigns.com"/>
                <setinputfield description="set passwordHint" name="user.passwordHint" value="test"/>
                <setselectfield description="Select roles" name="userRoles" value="ROLE_USER"/>
                <clickbutton label="${button.save}" description="Click button 'Save'"/>
                
                <verifytitle description="view user list screen" text=".*${userList.title}.*" regex="true"/>
                <verifytext description="verify success message" regex="true"
                    text='&lt;div class="message.*&gt;.*Test Name.*&lt;/div&gt;'/>
                    
                <!-- Delete user -->
                <clicklink description="Click edit user link" label="newuser"/>
                <enableJavaScript enable="false"/>
                <!--prepareDialogResponse description="Confirm delete" dialogType="confirm" response="true"/-->
                <clickbutton label="${button.delete}" description="Click button 'Delete'"/>
                <!--verifyNoDialogResponses/-->
                <verifytext description="verify success message" regex="true"
                    text='&lt;div class="message.*&gt;.*Test Name.*&lt;/div&gt;'/>
                <verifytitle description="display user list" text=".*${userList.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>
    
    <!-- Sign up a new user (no login) -->
    <target name="Signup" description="Signup a new user">
        <webtest name="signup">
            &config;
            <steps>
                <invoke description="click signup link" url="/signup.html"/>
                <verifytitle description="view signup title" text=".*${signup.title}.*" regex="true"/>
                    
                <setinputfield description="set username" name="user.username" value="taslak-signup-user"/>
                <setinputfield description="set password" name="user.password" value="test"/>
                <setinputfield description="set confirmPassword" name="user.confirmPassword" value="test"/>
                <setinputfield description="set firstName" name="user.firstName" value="Test"/>
                <setinputfield description="set lastName" name="user.lastName" value="Name"/>
                <setinputfield description="set city" name="user.address.city" value="Nowhere"/>
                <setinputfield description="set state" name="user.address.province" value="NO"/>
                <setselectfield description="select country" name="user.address.country" value="US"/>
                <setinputfield description="set postalCode" name="user.address.postalCode" value="00000"/>
                <setinputfield description="set email" name="user.email" value="taslak-signup-user@xmdl.org"/>
                <setinputfield description="set website" name="user.website" value="http://www.xmdl.org"/>
                <setinputfield description="set passwordHint" name="user.passwordHint" value="test"/>
                
                <enableJavaScript enable="false"/> <!-- HtmlUnit doesn't understand table.rows.length -->
                <clickbutton name="button.register"  description="Click button 'Signup'"/>
                
                <verifytitle description="view main menu" text=".*${mainMenu.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${user.registered}"/>
            </steps>
        </webtest>
    </target>

    <!-- View Active Users -->
    <target name="ActiveUsers" description="View Active Users List">
        <webtest name="activeUsers">
            &config;
            <steps>
                &login;
                <invoke description="get activeUsers URL" url="/admin/activeUsers.html"/>
                <verifytitle description="we should see the activeUsers title" 
                    text=".*${activeUsers.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>
    
    <!-- Flush OSCache -->
    <target name="FlushCache" description="opens JSP to Flush Page Cache">
        <webtest name="flushCache">
            &config;
            <steps>
                &login;
                <invoke description="get flushCache URL" url="/admin/flushCache.html"/>
                <verifytitle description="we should see the flush cache title"
                    text=".*${flushCache.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>
    
    <!-- File Upload -->
    <target name="FileUpload" description="Tests uploading a file">
        <webtest name="fileUpload">
            &config;
            <steps>
                &login;
                <invoke description="click Upload a File link" url="/uploadFile.html"/>
                <verifytitle description="we should see file upload form" text=".*${upload.title}.*" regex="true"/>
                <setinputfield description="set name" name="name" value="Canoo Test File"/>
                <setFileField description="set file" name="file" fileName="pom.xml"/>
                <clickbutton label="${button.upload}" description="Click Upload"/>
                <verifytitle description="show file data if upload OK" text=".*${display.title}.*" regex="true"/>
                <verifytext description="verify original filename displayed on page" text="pom.xml"/>
            </steps>
        </webtest>
    </target>
    <!--Product-START-->
    <!-- runs product-related tests -->
    <target name="ProductTests" depends="SearchProducts,EditProduct,SaveProduct,AddProduct,DeleteProduct"
            description="Call and executes all product test cases (targets)">
        <echo>Successfully ran all Product UI tests!</echo>
    </target>

    <!-- Verify the products list screen displays without errors -->
    <target name="SearchProducts" description="Tests search for and displaying all products">
        <webtest name="searchProducts">
            &config;
            <steps>
                &login;
                <invoke description="click View Product link" url="/Product/products.html"/>
                <verifytitle description="we should see the productList title"
                             text=".*${productList.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Verify the edit product screen displays without errors -->
    <target name="EditProduct" description="Tests editing an existing Product's information">
        <webtest name="editProduct">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Product link" url="/Product/editProduct.html?id=-1"/>
                <verifytitle description="we should see the productDetail title"
                             text=".*${productDetail.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Edit a product and then save -->
    <target name="SaveProduct" description="Tests editing and saving a product">
        <webtest name="saveProduct">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Product link" url="/Product/editProduct.html?id=-1"/>
                <verifytitle description="we should see the productDetail title"
                             text=".*${productDetail.title}.*" regex="true"/>

                <!-- update some of the required fields -->

                <clickbutton label="${button.save}" description="Click Save"/>
                <verifytitle description="Page re-appears if save successful"
                             text=".*${productDetail.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${product.updated}"/>
            </steps>
        </webtest>
    </target>

    <!-- Add a new Product -->
    <target name="AddProduct" description="Adds a new Product">
        <webtest name="addProduct">
            &config;
            <steps>
                &login;
                <invoke description="click Add Button" url="/Product/editProduct.html"/>
                <verifytitle description="we should see the productDetail title"
                             text=".*${productDetail.title}.*" regex="true"/>

                <!-- enter required fields -->

                <clickbutton label="${button.save}" description="Click button 'Save'"/>
                <verifytitle description="Product List appears if save successful"
                             text=".*${productList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${product.added}"/>
            </steps>
        </webtest>
    </target>

    <!-- Delete existing product -->
    <target name="DeleteProduct" description="Deletes existing Product">
        <webtest name="deleteProduct">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Product link" url="/Product/editProduct.html?id=-1"/>
                <prepareDialogResponse description="Confirm delete" dialogType="confirm" response="true"/>
                <clickbutton label="${button.delete}" description="Click button 'Delete'"/>
                <verifyNoDialogResponses/>
                <verifytitle description="display Product List" text=".*${productList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${product.deleted}"/>
            </steps>
        </webtest>
    </target>
    <!--Product-END-->
    <!--Order-START-->
    <!-- runs order-related tests -->
    <target name="OrderTests" depends="SearchOrders,EditOrder,SaveOrder,AddOrder,DeleteOrder"
            description="Call and executes all order test cases (targets)">
        <echo>Successfully ran all Order UI tests!</echo>
    </target>

    <!-- Verify the orders list screen displays without errors -->
    <target name="SearchOrders" description="Tests search for and displaying all orders">
        <webtest name="searchOrders">
            &config;
            <steps>
                &login;
                <invoke description="click View Order link" url="/Order/orders.html"/>
                <verifytitle description="we should see the orderList title"
                             text=".*${orderList.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Verify the edit order screen displays without errors -->
    <target name="EditOrder" description="Tests editing an existing Order's information">
        <webtest name="editOrder">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Order link" url="/Order/editOrder.html?id=-1"/>
                <verifytitle description="we should see the orderDetail title"
                             text=".*${orderDetail.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Edit a order and then save -->
    <target name="SaveOrder" description="Tests editing and saving a order">
        <webtest name="saveOrder">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Order link" url="/Order/editOrder.html?id=-1"/>
                <verifytitle description="we should see the orderDetail title"
                             text=".*${orderDetail.title}.*" regex="true"/>

                <!-- update some of the required fields -->
                <setInputField description="set name" name="order.name" value="SrOzBdQzGm"/>
                <setInputField description="set priceTotals" name="order.priceTotals" value="1.5677480675309173E308"/>
                <setInputField description="set createDate" name="order.createDate" value="09/20/2007"/>

                <clickbutton label="${button.save}" description="Click Save"/>
                <verifytitle description="Page re-appears if save successful"
                             text=".*${orderDetail.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${order.updated}"/>
            </steps>
        </webtest>
    </target>

    <!-- Add a new Order -->
    <target name="AddOrder" description="Adds a new Order">
        <webtest name="addOrder">
            &config;
            <steps>
                &login;
                <invoke description="click Add Button" url="/Order/editOrder.html"/>
                <verifytitle description="we should see the orderDetail title"
                             text=".*${orderDetail.title}.*" regex="true"/>

                <!-- enter required fields -->
                <setInputField description="set name" name="order.name" value="EeWiSqBjDa"/>
                <setInputField description="set priceTotals" name="order.priceTotals" value="1.331554345369856E308"/>
                <setInputField description="set createDate" name="order.createDate" value="09/20/2007"/>

                <clickbutton label="${button.save}" description="Click button 'Save'"/>
                <verifytitle description="Order List appears if save successful"
                             text=".*${orderList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${order.added}"/>
            </steps>
        </webtest>
    </target>

    <!-- Delete existing order -->
    <target name="DeleteOrder" description="Deletes existing Order">
        <webtest name="deleteOrder">
            &config;
            <steps>
                &login;
                <invoke description="click Edit Order link" url="/Order/editOrder.html?id=-1"/>
                <prepareDialogResponse description="Confirm delete" dialogType="confirm" response="true"/>
                <clickbutton label="${button.delete}" description="Click button 'Delete'"/>
                <verifyNoDialogResponses/>
                <verifytitle description="display Order List" text=".*${orderList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${order.deleted}"/>
            </steps>
        </webtest>
    </target>
    <!--Order-END-->
    <!--OrderElement-START-->
    <!-- runs orderElement-related tests -->
    <target name="OrderElementTests" depends="SearchOrderElements,EditOrderElement,SaveOrderElement,AddOrderElement,DeleteOrderElement"
            description="Call and executes all orderElement test cases (targets)">
        <echo>Successfully ran all OrderElement UI tests!</echo>
    </target>

    <!-- Verify the orderElements list screen displays without errors -->
    <target name="SearchOrderElements" description="Tests search for and displaying all orderElements">
        <webtest name="searchOrderElements">
            &config;
            <steps>
                &login;
                <invoke description="click View OrderElement link" url="/OrderElement/orderElements.html"/>
                <verifytitle description="we should see the orderElementList title"
                             text=".*${orderElementList.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Verify the edit orderElement screen displays without errors -->
    <target name="EditOrderElement" description="Tests editing an existing OrderElement's information">
        <webtest name="editOrderElement">
            &config;
            <steps>
                &login;
                <invoke description="click Edit OrderElement link" url="/OrderElement/editOrderElement.html?id=-1"/>
                <verifytitle description="we should see the orderElementDetail title"
                             text=".*${orderElementDetail.title}.*" regex="true"/>
            </steps>
        </webtest>
    </target>

    <!-- Edit a orderElement and then save -->
    <target name="SaveOrderElement" description="Tests editing and saving a orderElement">
        <webtest name="saveOrderElement">
            &config;
            <steps>
                &login;
                <invoke description="click Edit OrderElement link" url="/OrderElement/editOrderElement.html?id=-1"/>
                <verifytitle description="we should see the orderElementDetail title"
                             text=".*${orderElementDetail.title}.*" regex="true"/>

                <!-- update some of the required fields -->
                <setInputField description="set quantity" name="orderElement.quantity" value="349250796246405120"/>

                <clickbutton label="${button.save}" description="Click Save"/>
                <verifytitle description="Page re-appears if save successful"
                             text=".*${orderElementDetail.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${orderElement.updated}"/>
            </steps>
        </webtest>
    </target>

    <!-- Add a new OrderElement -->
    <target name="AddOrderElement" description="Adds a new OrderElement">
        <webtest name="addOrderElement">
            &config;
            <steps>
                &login;
                <invoke description="click Add Button" url="/OrderElement/editOrderElement.html"/>
                <verifytitle description="we should see the orderElementDetail title"
                             text=".*${orderElementDetail.title}.*" regex="true"/>

                <!-- enter required fields -->
                <setInputField description="set quantity" name="orderElement.quantity" value="6901303570709783552"/>

                <clickbutton label="${button.save}" description="Click button 'Save'"/>
                <verifytitle description="OrderElement List appears if save successful"
                             text=".*${orderElementList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${orderElement.added}"/>
            </steps>
        </webtest>
    </target>

    <!-- Delete existing orderElement -->
    <target name="DeleteOrderElement" description="Deletes existing OrderElement">
        <webtest name="deleteOrderElement">
            &config;
            <steps>
                &login;
                <invoke description="click Edit OrderElement link" url="/OrderElement/editOrderElement.html?id=-1"/>
                <prepareDialogResponse description="Confirm delete" dialogType="confirm" response="true"/>
                <clickbutton label="${button.delete}" description="Click button 'Delete'"/>
                <verifyNoDialogResponses/>
                <verifytitle description="display OrderElement List" text=".*${orderElementList.title}.*" regex="true"/>
                <verifytext description="verify success message" text="${orderElement.deleted}"/>
            </steps>
        </webtest>
    </target>
    <!--OrderElement-END-->
</project>
