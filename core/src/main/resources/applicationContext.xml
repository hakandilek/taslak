<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-lazy-init="true">

    <!-- Add new DAOs here -->

    <!--ProductManager-START-->
    <bean id="productManager" class="org.xmdl.taslak.service.impl.GenericManagerImpl">
        <constructor-arg>
            <bean class="org.xmdl.taslak.dao.hibernate.GenericDaoHibernate">
                <constructor-arg value="org.xmdl.taslak.model.Product"/>
                <property name="sessionFactory" ref="sessionFactory"/>
            </bean>
        </constructor-arg>
    </bean>
    <!--ProductManager-END-->

    <!--OrderManager-START-->
    <bean id="orderManager" class="org.xmdl.taslak.service.impl.GenericManagerImpl">
        <constructor-arg>
            <bean class="org.xmdl.taslak.dao.hibernate.GenericDaoHibernate">
                <constructor-arg value="org.xmdl.taslak.model.Order"/>
                <property name="sessionFactory" ref="sessionFactory"/>
            </bean>
        </constructor-arg>
    </bean>
    <!--OrderManager-END-->

    <!--OrderElementManager-START-->
    <bean id="orderElementManager" class="org.xmdl.taslak.service.impl.GenericManagerImpl">
        <constructor-arg>
            <bean class="org.xmdl.taslak.dao.hibernate.GenericDaoHibernate">
                <constructor-arg value="org.xmdl.taslak.model.OrderElement"/>
                <property name="sessionFactory" ref="sessionFactory"/>
            </bean>
        </constructor-arg>
    </bean>
    <!--OrderElementManager-END-->

    <!-- Add new Managers here -->
</beans>