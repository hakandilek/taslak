<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd"
       default-lazy-init="true">

    <!-- Add new DAOs here -->

    <bean id="productDao" class="org.xmdl.taslak.dao.hibernate.ProductDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="productManager" class="org.xmdl.taslak.service.impl.ProductManagerImpl">
        <constructor-arg ref="productDao"/>
    </bean>
    <bean id="orderDao" class="org.xmdl.taslak.dao.hibernate.OrderDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="orderManager" class="org.xmdl.taslak.service.impl.OrderManagerImpl">
        <constructor-arg ref="orderDao"/>
    </bean>
    <bean id="orderElementDao" class="org.xmdl.taslak.dao.hibernate.OrderElementDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="orderElementManager" class="org.xmdl.taslak.service.impl.OrderElementManagerImpl">
        <constructor-arg ref="orderElementDao"/>
    </bean>

</beans>